{% extends 'base.html.twig' %}

{% block title %}Postes de travail{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-7 text-center mb-5">
                <h1 class="heading-section"><i class="material-icons" >keyboard</i><span style="margin-left:10px;">Postes de travail</span></h1>
            </div>
        </div>
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                {% if type == 'success_workstation_delete' %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endif %}
                {% if type == 'success_workstation_add' %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endif %}
                {% if type == 'success_workstation_edit' %}
                    <div class="alert alert-warning" role="alert">
                        {{ message }}
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
        <hr class="border-dark"/>
        <br>
        {{ render(controller('App\\Controller\\WorkStationController::new')) }}
        <!-- Button trigger modal -->
        <button type="button" class="btn mb-3 btn-outline-primary" data-toggle="modal" data-target="#addWorkStationModal">
                <span class="form-row">
                    <i class="material-icons" >add</i>Postes de travail
                </span>
        </button>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="text-center">
                        <tr>
                            <th></th>
                            <th>Libell√©</th>
                            <th>Utilisateur</th>
                            <th>Machines</th>
                            <th colspan="2">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                        {% for workstation in workstations %}
                            <tr>
                                <th scope="row">{{ workstation.id }}</th>
                                <td>{{ workstation.libelle }}</td>
                                <td>{{ workstation.userWorkstation }}</td>
                                <td>
                                    {{ render(controller('App\\Controller\\WorkStationController::showMachines', {'id': workstation.id })) }}
                                    <a type="button" href="{{ path('workstation.machines', {id : workstation.id}) }}" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#showMachinesByWorkstationModal{{ workstation.id }}"><i class="material-icons" >personal_video</i></a>
                                </td
                                >
                                <td>
                                    {{ render(controller('App\\Controller\\WorkStationController::edit', {'id': workstation.id })) }}
                                    <a href="{{ path('workstation.edit', {'id': workstation.id}) }}" type="button" class="btn btn-sm mb-3 btn-outline-primary" data-toggle="modal" data-target="#editWorkStationModal{{ workstation.id }}"><i class="material-icons" >edit</i></a>
                                </td>
                                <td>
                                    {% include('work_station/_delete_form.html.twig') %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
