{% extends 'base.html.twig' %}

{% block title %}Opérations de la gamme {{ range.id }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-5">
            <h1 class="heading-section">Opérations de la gamme {{ range.id }}</h1>
            <a href="{{ path('home') }}" class="btn btn-sm btn-outline-primary w-25 mt-3"><i class="material-icons" >arrow_back</i></a>
        </div>
    </div>
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            {% if type == 'success_operation_delete' %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
            {% endif %}
            {% if type == 'success_operations' %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endif %}
            {% if type == 'success_operation_edit' %}
                <div class="alert alert-warning" role="alert">
                    {{ message }}
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}
    <hr class="border-dark"/>
    <br>
    <a href="{{ path('range.operation.add', {id: range.id}) }}" class="btn btn-sm btn-outline-primary mb-3"><div class="form-row"><i class="material-icons" >add</i>Opération</div></a>
    <div class="row">
        <div class="col-md-12">
            <div class="table-wrap table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="text-center">
                    <tr>
                        <th></th>
                        <th>Libellé</th>
                        <th>Durée</th>
                        <th>Poste de travail</th>
                        <th>Machine</th>
                        <th colspan="2">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="text-center">
                    {% for operation in operations %}
                        <tr>
                            <th scope="row">{{ operation.id }}</th>
                            <td>{{ operation.libelle }}</td>
                            <td>{{ operation.time|date('H:i:s') }}</td>
                            <td>{{ operation.workStation.libelle}}</td>
                            <td>{{ operation.machine.libelle }}</td>
                            <td>
                                <a href="{{ path('range.operation.edit', {id: range.id, operationId: operation.id}) }}" class="btn btn-sm btn-outline-primary"><i class="material-icons" >edit</i></a>
                            </td>
                            <td>
                                {% include('operation/_delete_form.html.twig') %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
