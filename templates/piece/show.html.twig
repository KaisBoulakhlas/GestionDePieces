<div class="modal fade" tabindex="-1" role="dialog"  aria-labelledby="showCompositionPieceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
                <div class="modal-header text-center">
                    <h5 class="modal-title w-100" id="showCompositionPieceModalLabel">Composition de la pièce : {{ piece.libelle}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <p class="text-muted mt-1 text-center">Nombre de pièces composantes: {{  piece.pieceUseds|length }}</p>
                <div class="modal-body">
                    {% for pieceUsed in piece.pieceUseds %}
                        <div class="card">
                            <div class="card-header">
                                {{ pieceUsed.piece.libelle }}
                            </div>
                            <div class="card-body">
                                <blockquote class="blockquote mb-0">
                                    <p>Quantité : {{ pieceUsed.quantity }} / Stock : {{ pieceUsed.piece.quantity }}</p>
                                    {% if pieceUsed.piece.priceCatalogue != null %}
                                        <p>Prix d'achat : {{ pieceUsed.piece.priceCatalogue }} €</p>
                                    {% endif %}
                                    <footer class="blockquote-footer">{{ pieceUsed.piece.type }}</footer>
                                </blockquote>
                            </div>
                        </div>
                        <br>
                    {% else %}
                       <p class="text-center">Cette pièce n'a aucune composition.</p>
                    {% endfor %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
        </div>
    </div>
</div>