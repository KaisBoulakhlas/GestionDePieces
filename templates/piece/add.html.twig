{% extends 'base.html.twig' %}

{% block title %}Ajouter une pièce{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Ajouter une pièce</h1>
        <hr/>
        <div class="container">
                {{ form_start(form) }}
                <div class="form-row">
                    <div class="form-group col-md-3">
                        {{ form_row(form.libelle) }}
                    </div>
                    <div class="form-group col-md-1 ml-2">
                        {{ form_row(form.quantity) }}
                    </div>
                    <div class="form-group col-md-3">
                        {{ form_row(form.type) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4 form_piece_provider"  hidden>
                        {{ form_row(form.provider) }}
                    </div>
                    <div class="form-group col-md-2 form_piece_price_catalog" hidden>
                        {{ form_row(form.priceCatalogue) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6 form_piece_range" hidden>
                        {{ form_row(form.range) }}
                    </div>
                    <div class="form-group col-md-2 form_piece_price" hidden>
                        {{ form_row(form.price) }}
                    </div>
                </div>
                <div class="col-md-4 form-pieces-children" hidden>
                        {{ form_row(form.piecesChildren) }}
                </div>
                <div class="form-row">
                    <button class="btn btn-outline-success" type="submit" style="margin-left:5px;">{{ button|default('Ajouter')}}</button>
                </div>
                {{ form_end(form) }}
        </div>
    </div>

{% endblock %}