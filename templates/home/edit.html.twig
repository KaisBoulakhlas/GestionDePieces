<!-- Modal -->

<div class="modal fade" id="editRangeModal{{ range.id }}" data-whatever="{{ range.id }}" tabindex="-1" role="dialog"  aria-labelledby="editRangeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="POST" id="edit_range{{ range.id }}" data-whatever="{{ range.id }}">
                {{ form_start(form)}}
                {{ dump(range.id) }}
                <div class="modal-header">
                    <h5 class="modal-title" id="editRangeModalLabel">Modifier une gamme</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p style="display:none;">La gamme {{ range.libelle }} a été ajoutée avec succès.</p>
                    {{ form_row(form.libelle,
                        {'attr': {'class': 'form-control'}})
                    }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-warning">Modifier</button>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>