{% extends 'base.html.twig' %}

{% block title %}Modifier une réalisation d'opération{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Modifier une réalisation d'opération</h1>
        <hr/>
        <div class="container">
            {{ form_start(form_realisation) }}
            <div class="form-row">
                <div class="form-group col-md-4 mt-1">
                    {{ form_row(form_realisation.libelle) }}
                </div>
                <div class="form-group col-md-4 ml-2">
                    {{ form_row(form_realisation.time) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_row(form_realisation.userWorkStation) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_row(form_realisation.workstation) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_row(form_realisation.machine) }}
                </div>
            </div>
            <div class="form-row">
                <button class="btn btn-outline-success" type="submit" style="margin-left:5px;">{{ button|default('Modifier')}}</button>
            </div>
            {{ form_end(form_realisation) }}
        </div>
    </div>
{% endblock %}