{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="mt-5 p-5">
        <div class="row justify-content-center">
            <div class="col-md-7 text-center mb-5">
                <h1 class="heading-section"><i class="material-icons" >domain</i><span style="margin-left:10px;">Clients</span></h1>
            </div>
        </div>
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                {% if type == 'success_customer_delete' %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endif %}
                {% if type == 'success_customer_add' %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endif %}
                {% if type == 'success_customer_edit' %}
                    <div class="alert alert-warning" role="alert">
                        {{ message }}
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
        <hr class="border-dark"/>
        <br>
        <a type="button" href="{{ path('customer.add') }}" class="btn mb-3 btn-outline-primary">
                <span class="form-row">
                    <i class="material-icons" >add</i>Client
                </span>
        </a>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="text-center">
                        <tr>
                            <th></th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Adresse</th>
                            <th>Ville</th>
                            <th>Code postal</th>
                            <th>Téléphone</th>
                            <th colspan="2">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                        {% for customer in customers %}
                            <tr>
                                <th scope="row">{{ customer.id }}</th>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.firstname }}</td>
                                <td>{{ customer.email }}</td>
                                <td>{{ customer.adress }}</td>
                                <td>{{ customer.city }}</td>
                                <td>{{ customer.postalCode }}</td>
                                <td>{{ customer.phone }}</td>
                                <td>
                                    <a href="{{ path('customer.edit', {'id': customer.id}) }}" type="button" class="btn btn-sm mb-3 btn-outline-primary"><i class="material-icons" >edit</i></a>
                                </td>
                                <td>
                                    {% include('customer/_delete_form.html.twig') %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
